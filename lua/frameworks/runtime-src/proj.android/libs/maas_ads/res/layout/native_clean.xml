<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/native_clean_background"
    android:layout_gravity="center_horizontal"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imageViewAdIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tvAdTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_alignTop="@+id/imageViewAdIcon"
            android:layout_toRightOf="@+id/imageViewAdIcon"
            android:layout_toEndOf="@+id/imageViewAdIcon" />

        <TextView
            android:id="@+id/tvAdDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAdTitle"
            android:layout_toRightOf="@+id/imageViewAdIcon"
            android:layout_toEndOf="@+id/imageViewAdIcon"
            android:textSize="12sp"
            />

        <Button
            android:id="@+id/btnAction"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/green_button_background"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvAdDescription"
            tools:text="C T A text"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llPriceContainer"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:rotation="-40"
        android:layout_marginLeft="-20dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</RelativeLayout>